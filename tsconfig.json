{
    "compilerOptions": {
        "target": "es5",
        // "module": "esnext",
        "module": "commonjs",
        "typeRoots": [
            "node_modules/@types"
        ],
        "outDir": "./build/dist",
        "lib": [
            "esnext",
            "dom"
        ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "strict": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "jsx": "react",
        // "moduleResolution": "node",
        "noUnusedLocals": true
    },
    "exclude": [
        "node_modules",
        "test"
    ]
}